{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@projects/*": ["./public/assets/projects/*"],
      "@assets/*": ["./public/assets/*"],
      "@public/*": ["./public/*"],

      "@app/*": ["./src/app/*"],
      "@common/*": ["./src/common/*"],

      "@nav/*": ["./src/components/nav/*"],
      "@section/*": ["./src/components/section/*"],
      "@ui/*": ["./src/components/ui/*"],
      
      "@components/*": ["./src/components/*"],

      "@context/*": ["./src/context/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@styles/*": ["./src/styles/*"],

      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "global.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"],
  "exclude": [ "node_modules" ],
  "typeRoots": [ "global.d.ts" ]
}
